<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sdk.mobfox.com.mobfox_app">

    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:name=".SplashDelay"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mobfox.sdk.interstitial.InterstitialActivity" />
        <activity android:name=".barcode.BarcodeCaptureActivity" />
        <activity
            android:name=".Tab4_Inter"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Tab1_320x50"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Tab2_300x50"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Tab3_300x250"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>